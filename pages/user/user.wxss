.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}
.header {
  padding: 20rpx;
  background-color: #ffffff;
}
.header .title {
  font-size: 36rpx;
  font-weight: bold;
}
.content {
  flex: 1;
}
.user-info {
  display: flex;
  align-items: center;
  padding: 40rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
}
.user-info .info {
  display: flex;
  flex-direction: column;
}
.user-info .info .nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.user-info .info .phone {
  font-size: 28rpx;
  color: #999999;
}
.menu-list {
  background-color: #ffffff;
}
.menu-list .menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eeeeee;
}
.menu-list .menu-item .menu-title {
  font-size: 30rpx;
}
.menu-list .menu-item .arrow {
  color: #999999;
}