.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}
.content {
  max-width: 750rpx;
  margin: 0 auto;
}
.form-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}
.form-group {
  margin-bottom: 30rpx;
}
.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}
.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.input {
  flex: 1;
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
  width: 60rpx;
}
.picker {
  height: 80rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.result-card {
  background-color: #f8f8f8;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-top: 30rpx;
}
.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.result-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}
.result-label {
  font-size: 28rpx;
  color: #666;
}
.result-value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.calculate-btn {
  width: 100%;
  height: 88rpx;
  background-color: #00b3ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}